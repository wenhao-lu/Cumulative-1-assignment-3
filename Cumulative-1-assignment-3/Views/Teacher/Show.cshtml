@model Cumulative_1_assignment_3.Models.Teacher


@{
    ViewBag.Title = "Show";
}



<h2>@Model.TeacherFname @Model.TeacherLname</h2>

<table id="showTable">
    <tr>
        <th>Teacher Id</th>
        <th>Employee Number</th>
        <th>Hire Date</th>
        <th>Salary</th>
    </tr>
    <tr>
        <td>@Model.TeacherId</td>
